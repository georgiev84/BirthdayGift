@model Birthday.Entities.Voting

@{
    ViewData["Title"] = "Edit";
}

<h4>Activate or Disable voting</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <section hidden>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="VotingId" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AdminId" class="control-label"></label>
                    <input asp-for="AdminId" class="form-control" />
                    <span asp-validation-for="AdminId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CelebratorId" class="control-label"></label>
                    <input asp-for="CelebratorId" class="form-control" />
                    <span asp-validation-for="CelebratorId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Year" class="control-label"></label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
            </section>
            <div class="form-group form-check">

                <label class="form-check-label">
                    <input class="form-check-input" asp-for="VotingStatus" /> @Html.DisplayNameFor(model => model.VotingStatus)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
